<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.fhooe.mc.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_festly_logo_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="at.fhooe.mc.festly.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="at.fhooe.mc.festly.ActivityLocation"
            android:screenOrientation="portrait" />
        <activity
            android:name="at.fhooe.mc.festly.ActivityBar"
            android:screenOrientation="portrait" />
        <activity
            android:name="at.fhooe.mc.festly.ActivityDrinking"
            android:screenOrientation="portrait" />
        <activity
            android:name="at.fhooe.mc.festly.ActivitySelection"
            android:screenOrientation="portrait" />
        <activity android:name="at.fhooe.mc.festly.ActivityFinish"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>