<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <ImageView
            android:id="@+id/bar_activity_image_bar"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:src="@android:drawable/dialog_holo_light_frame" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="19dp" />

        <TextView
            android:id="@+id/activity_bar_textview_barname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="@android:dimen/app_icon_size"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="159dp" />

        <Button
            android:id="@+id/start_activity_drinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Festly_Ci"
            android:text="@string/activitybar_saufen"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/bar_activity_showway"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Festly_Ci"
            android:text="@string/activitybar_showway"
            android:textColor="@color/white" />
    </LinearLayout>
</FrameLayout>